{
  "manifest_version": 2,
  "name": "TabLists",
  "description": "A Firefox TabGroups/Panorama Replacement",
  "version": "1.0.0",

  "applications": {
    "gecko": {
      "id": "tablists@mozilla.org"
    }
  },

  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },

  "permissions": [
    "tabs",
    "bookmarks",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon_19.png",
      "38": "img/icon_38.png"
    },
    "default_popup": "popup.html",
    "default_title": "TabLists"
  },

  "options_page": "options.html"
}
